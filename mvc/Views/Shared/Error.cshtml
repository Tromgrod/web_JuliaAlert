    Layout = "~/Views/Master/_AdminSimplified.cshtml";
}
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a style="display:block;margin: 0px auto;" href="@LIB.Tools.Utils.URLHelper.GetUrl("")">
                <img src="@LIB.Tools.Utils.URLHelper.GetUrl("Images/logo_btn.svg")" style="background-color: white; padding: 10px; border-radius: 10px;" />
